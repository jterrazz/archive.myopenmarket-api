{
  "name": "theopenmarket-api",
  "version": "1.0.0",
  "engines": {
    "node": "15.x"
  },
  "repository": "git@github.com:theopenmarket/tom-api.git",
  "author": "Jean-Baptiste Terrazzoni <jterrazz@icloud.com>",
  "scripts": {
    "start": "node -r tsconfig-paths/register -r ts-node/register ./src/server/server.ts",
    "start:dev": "nodemon",
    "start:dev-environment": "docker-compose up database store",
    "db:generate": "node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js migration:generate -n ",
    "db:migrate": "node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js migration:run",
    "db:revert": "node -r tsconfig-paths/register -r ts-node/register ./node_modules/typeorm/cli.js migration:revert",
    "test": "NODE_ENV=test jest --silent",
    "test:coverage": "jest --coverage",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx ."
  },
  "devDependencies": {
    "@types/bull": "^3.15.0",
    "@types/jest": "^26.0.22",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.5"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@sentry/node": "^6.2.5",
    "@types/node": "^14.14.41",
    "argon2": "^0.27.2",
    "assert": "^2.0.0",
    "bull": "^3.22.0",
    "class-validator": "^0.13.1",
    "config": "^3.3.6",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-passport": "^4.1.4",
    "koa-router": "^10.0.0",
    "koa-session": "^6.2.0",
    "lodash": "^4.17.21",
    "mixpanel": "^0.13.0",
    "passport-local": "^1.0.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "ts-loader": "^8.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.32",
    "typescript": "^4.2.4",
    "winston": "^3.3.3",
    "zod": "^1.11.13"
  }
}
