{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "types" : ["node", "jest"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "~/*": ["./src/*"],
      "@tom": ["./libs/the-open-market"],
      "@tom/*": ["./libs/the-open-market/*"],
      "@middlewares/*": ["./src/middlewares/*"],
      "@model": ["./src/models"],
      "@config": ["./src/config"],
      "@controllers/*": ["./src/controllers/*"],
      "@services/*": ["./src/services/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}