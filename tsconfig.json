{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "types" : ["node", "jest"],
    "baseUrl": ".",
    "esModuleInterop": true,
    "sourceMap": true,
    "paths": {
      "~/*": ["./src/*"],
      "@tom": ["./libs/tom-classes/server"],
      "@tom/*": ["./libs/tom-classes/src/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@model": ["./src/models"],
      "@config": ["./src/config"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules"
  ]
}